@model List<PersonalProyect.DTOs.RoleDTO>

@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Roles";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="mb-0">Roles</h2>

    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Crear Rol
    </a>
</div>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-warning">
        No hay roles registrados.
    </div>
}
else
{
    <table class="table table-bordered table-striped">
        <thead class="table-dark">
            <tr>
                <th>Nombre</th>
                <th style="width:140px;">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var role in Model)
            {
                <tr>
                    <td>@role.Name</td>

                    <td class="text-center">
                        <a asp-action="Edit" asp-route-id="@role.Id" class="btn btn-sm btn-warning">
                            <i class="bi bi-pencil-square"></i>
                        </a>

                        <form asp-action="Delete" asp-route-id="@role.Id"
                              method="post"
                              onsubmit="return confirm('¿Seguro de eliminar este rol?')"
                              style="display:inline">
                            <button class="btn btn-sm btn-danger">
                                <i class="bi bi-trash3"></i>
                            </button>
                        </form>
                    </td>

                </tr>
            }
        </tbody>
    </table>
}
