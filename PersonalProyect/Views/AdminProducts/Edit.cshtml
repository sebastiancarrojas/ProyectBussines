@model PersonalProyect.DTOs.ProductDTO
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Editar Producto";
}

<h2>Editar Producto</h2>

<form method="post">

    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label>Nombre</label>
        <input class="form-control" asp-for="Name" />
    </div>

    <div class="mb-3">
        <label>Descripción</label>
        <textarea class="form-control" asp-for="Description"></textarea>
    </div>

    <div class="mb-3">
        <label>Precio</label>
        <input class="form-control" asp-for="Price" type="number" step="0.01" />
    </div>

    <div class="mb-3">
        <label>Código</label>
        <input class="form-control" asp-for="Code" />
    </div>

    <div class="mb-3">
        <label>Estado</label>
        <select class="form-select" asp-for="Status">
            <option value="Activo">Activo</option>
            <option value="Inactivo">Inactivo</option>
        </select>
    </div>

    <button class="btn btn-success">Guardar Cambios</button>
    <a class="btn btn-secondary" href="/AdminProducts">Cancelar</a>
</form>
