@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Panel Administrativo</title>

    <!-- Bootstrap -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">

    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">

    <style>
        /* Estilo para el Sidebar */
        #sidebar {
            min-width: 250px;
            max-width: 250px;
            min-height: 100vh;
        }

        .sidebar-link {
            border-radius: 8px;
            transition: 0.2s ease;
        }

            .sidebar-link:hover {
                background-color: rgba(255,255,255,0.15);
            }

        @@media (max-width: 768px) {
            #sidebar

        {
            display: none;
        }

        }
    </style>

</head>
<body class="bg-light">

    <!-- Botón para mostrar sidebar en móvil -->
    <button class="btn btn-dark d-md-none m-2" onclick="toggleSidebar()">
        <i class="bi bi-list"></i>
    </button>

    <div class="d-flex">

        <!-- SIDEBAR -->
        <nav id="sidebar" class="bg-dark text-white p-3">

            <h4 class="text-center mb-4">Admin Panel</h4>

            <ul class="nav flex-column">
                <!-- Inicio -->
                <li class="nav-item mb-2">
                    <a href="/Admin" class="nav-link text-white d-flex align-items-center sidebar-link">
                        <i class="bi bi-house-door me-2"></i> Inicio
                    </a>
                </li>
                <!-- Productos -->
                <li class="nav-item mb-2">
                    <a href="/AdminProducts" class="nav-link text-white d-flex align-items-center sidebar-link">
                        <i class="bi bi-box-seam me-2"></i> Productos
                    </a>
                </li>

                <!-- Clientes -->
                <li class="nav-item mb-2">
                    <a href="/AdminCustomers" class="nav-link text-white d-flex align-items-center sidebar-link">
                        <i class="bi bi-person-gear me-2"></i> Clientes
                    </a>
                </li>
            </ul>
        </nav>

        <!-- CONTENIDO PRINCIPAL -->
        <div class="flex-grow-1 p-4">
            @RenderBody()
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        function toggleSidebar() {
            const sidebar = document.getElementById("sidebar");
            sidebar.style.display = sidebar.style.display === "none" ? "block" : "none";
        }
    </script>

</body>
</html>
