<!---------------------------------------------------------------------->
<!--------------------------- AdminLayout ------------------------------>
<!---------------------------------------------------------------------->

@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Registrar venta";
}

<!---------------------------------------------------------------------->
<!----------------------------- Styles --------------------------------->
<!---------------------------------------------------------------------->

<style>
    body {
        background-color: #eef1f4;
    }

    .sale-card {
        max-width: 1200px;
        margin: 2rem auto;
        border-radius: 20px;
        background-color: #f8f9fa;
        box-shadow: 0 20px 40px rgba(0,0,0,.08);
        border: 1px solid #e3e6ea;
    }

    .form-control {
        border-radius: 12px;
    }

        .form-control:focus {
            border-color: #393d42;
            box-shadow: 0 0 0 .15rem rgba(57,61,66,.25);
        }

    .btn-main {
        background-color: #393d42;
        color: #fff;
        border-radius: 20px;
        padding: .55rem 1.8rem;
    }

        .btn-main:hover {
            background-color: #2f3338;
            color: #fff;
        }

    .btn-outline-main {
        border-radius: 20px;
        border: 1px solid #393d42;
        color: #393d42;
    }

        .btn-outline-main:hover {
            background-color: #393d42;
            color: #fff;
        }

    #productResults {
        border-radius: 14px;
        overflow: hidden;
    }

        #productResults .list-group-item {
            cursor: pointer;
        }

            #productResults .list-group-item:hover {
                background-color: rgba(57,61,66,.05);
            }

    .table thead {
        background-color: #393d42;
        color: #fff;
    }

    .table td,
    .table th {
        vertical-align: middle;
    }

    .sale-total {
        font-size: 1.2rem;
        font-weight: 600;
    }

</style>

<!-------------------------------------------------------------------->
<!----------------------------- View --------------------------------->
<!-------------------------------------------------------------------->

<div class="card sale-card">
    <div class="card-body p-4">

        <!-- HEADER -->
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h4 class="mb-0">Registrar venta</h4>
            <div class="d-flex align-items-center gap-3">
                <div class="fw-semibold">
                    Fecha: <span id="currentDate"></span>
                </div>
                <a href="/AdminSales" class="btn btn-outline-main">
                    Volver
                </a>
            </div>
        </div>


        <!-- ===================== BLOQUE CLIENTE (OPCIONAL) ===================== -->
        <div class="card p-3 mb-3">
            <h6 class="fw-semibold mb-3">Cliente</h6>

            <div class="row g-3 align-items-end">
                <!-- Documento -->
                <div class="col-md-4">
                    <label class="form-label fw-semibold">Documento</label>
                    <input type="text"
                           id="customerDocument"
                           class="form-control"
                           placeholder="Número de documento" />
                </div>

                <!-- Nombre (solo lectura) -->
                <div class="col-md-5">
                    <label class="form-label fw-semibold">Nombre</label>
                    <input type="text"
                           id="customerName"
                           class="form-control"
                           readonly
                           placeholder="—" />
                </div>

                <!-- Acción -->
                <div class="col-md-3 d-flex gap-2">
                    <button type="button"
                            class="btn btn-outline-main"
                            id="createQuickCustomerBtn"
                            data-bs-toggle="modal"
                            data-bs-target="#quickCustomerModal">
                        Añadir cliente rápido
                    </button>

                </div>
            </div>
        </div>



        <!-- ===================== BLOQUE SUPERIOR (PRODUCTO) ===================== -->
        <div class="card p-3 mb-3">
            <div class="row g-3 align-items-end">
                <!-- Producto -->
                <div class="col-md-5 position-relative">
                    <label class="form-label fw-semibold">Seleccione producto</label>
                    <input type="text"
                           id="productSearch"
                           class="form-control"
                           placeholder="Buscar por nombre o código"
                           autocomplete="off" />
                    <div id="productResults"
                         class="list-group position-absolute w-100 shadow"
                         style="z-index:1050; display:none;"></div>
                </div>

                <!-- Cantidad -->
                <div class="col-md-3">
                    <label class="form-label fw-semibold">Cantidad</label>
                    <input type="number"
                           id="quantityInput"
                           class="form-control"
                           min="1"
                           value="1" />
                </div>

                <!-- Precio -->
                <div class="col-md-4">
                    <label class="form-label fw-semibold">Precio del producto:</label>
                    <div class="fw-semibold fs-5">
                        <span id="unitPrice">0</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- ===================== BOTONES (LIMPIAR / AÑADIR) ===================== -->
        <div class="d-flex justify-content-center gap-3 mb-4">
            <button id="clearBtn" class="btn btn-outline-main px-5">
                Limpiar
            </button>

            <button id="addProductBtn"
                    class="btn btn-main px-5"
                    disabled>
                Añadir
            </button>

            <!-- BOTÓN PARA PRODUCTO TEMPORAL -->
            <button id="addTempBtn"
                    class="btn btn-outline-secondary"
                    data-bs-toggle="modal"
                    data-bs-target="#tempProductModal"
                    title="Agregar producto temporal">
                +
            </button>
        </div>

        <!-- ===================== BLOQUE INFERIOR (LISTA) ===================== -->
        <div class="card p-3">
            <h6 class="text-center mb-3 fw-semibold">
                Lista de productos
            </h6>
            <div class="table-responsive mb-3">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Código</th>
                            <th>Producto</th>
                            <th class="text-center">Cantidad</th>
                            <th class="text-end">Precio Unitario</th>
                            <th class="text-end">Subtotal</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                    </thead>
                    <tbody id="saleTableBody"></tbody>
                </table>
            </div>
            <div class="d-flex justify-content-between align-items-center">
                <div class="sale-total">
                    Total: <span id="totalAmount">$0</span>
                </div>
                <button id="saveSaleBtn" class="btn btn-main">
                    Registrar venta
                </button>
            </div>
        </div>
    </div>
</div>
<!---------------------------------------------------------------------->
<!----------------------------- Modals --------------------------------->
<!---------------------------------------------------------------------->

<!-- MODAL PARA PRODUCTO TEMPORAL -->
<div class="modal fade" id="tempProductModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Agregar producto temporal</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <label class="form-label fw-semibold">Nombre del producto</label>
                    <input type="text"
                           id="tempProductName"
                           class="form-control"
                           placeholder=""
                           maxlength="100">
                </div>
                <div class="mb-3">
                    <label class="form-label fw-semibold">Precio unitario</label>
                    <input type="number"
                           id="tempUnitPrice"
                           class="form-control"
                           min="0.01"
                           step="0.01"
                           value="">
                </div>
                <div class="mb-3">
                    <label class="form-label fw-semibold">Cantidad</label>
                    <input type="number"
                           id="tempQuantity"
                           class="form-control"
                           min="1"
                           value="1">
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">
                    Cancelar
                </button>
                <button type="button" class="btn btn-main" id="addTempProductBtn">
                    Agregar
                </button>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="quickCustomerModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Crear cliente rápido</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <label class="form-label">Tipo de documento</label>
                    <select id="quickCustomerDocumentType" class="form-select">
                        <option value="CC">Cédula de ciudadanía</option>
                        <option value="CE">Cédula de extranjería</option>
                        <option value="TI">Tarjeta de identidad</option>
                        <option value="NIT">NIT</option>
                    </select>
                </div>
                <div class="mb-3">
                    <label class="form-label">Número de documento</label>
                    <input type="text" id="quickCustomerDocument" class="form-control">
                </div>
                <div class="mb-3">
                    <label class="form-label">Nombre completo</label>
                    <input type="text" id="quickCustomerFullName" class="form-control">
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-main" id="addQuickCustomerBtn">Guardar cliente</button>
            </div>
        </div>
    </div>
</div>

<!---------------------------------------------------------------------->
<!----------------------------- Script --------------------------------->
<!---------------------------------------------------------------------->

<script>
    /* ======================================================
       AUTH FETCH
    ====================================================== */
    window.authFetch = async (url, options = {}) => {
        const token = localStorage.getItem("token");

        return fetch(url, {
            ...options,
            headers: {
                "Content-Type": "application/json",
                "Authorization": `Bearer ${token}`,
                ...(options.headers || {})
            }
        });
    };

    (() => {
        const API_PRODUCT = '/api/Product';
        const API_SALE = '/api/Sale';

    // ELEMENTOS DEL MODAL
    const quickCustomerDocument = document.getElementById('quickCustomerDocument');
    const quickCustomerFullName = document.getElementById('quickCustomerFullName');
    const addQuickCustomerBtn = document.getElementById('addQuickCustomerBtn');
    const quickCustomerDocumentType = document.getElementById('quickCustomerDocumentType');

    addQuickCustomerBtn.addEventListener('click', async () => {
        const docType = quickCustomerDocumentType.value;
        const doc = quickCustomerDocument.value.trim();
        const name = quickCustomerFullName.value.trim();

        if (!docType || !doc || !name) {
            alert('Completa todos los campos');
            return;
        }

        try {
            const response = await authFetch('/api/customer/quick', {
                method: 'POST',
                body: JSON.stringify({
                    documentType: docType,
                    documentNumber: doc,
                    fullName: name
                })
            });

            const data = await response.json();

            if (!data.isSuccess) {
                alert(data.message || 'Error al crear cliente');
                return;
            }

            // Asignar cliente creado al formulario de ventas
            selectedCustomerId = data.result; // id del cliente creado
            customerDocumentInput.value = doc;
            customerNameInput.value = name;

            // Cerrar modal y limpiar campos
            const modal = bootstrap.Modal.getInstance(document.getElementById('quickCustomerModal'));
            modal.hide();
            quickCustomerDocument.value = '';
            quickCustomerFullName.value = '';
            quickCustomerDocumentType.value = 'CC';

        } catch (err) {
            console.error(err);
            alert('Error al crear cliente');
        }
    });

    /* ======================================================
       Customers
    ====================================================== */
    const customerDocumentInput = document.getElementById('customerDocument');
    const customerNameInput = document.getElementById('customerName');
    const createQuickCustomerBtn = document.getElementById('createQuickCustomerBtn');

    let customerController = null;
    let selectedCustomerId = null; // Aquí guardamos el GUID

    customerDocumentInput.addEventListener('blur', async () => {
        const term = customerDocumentInput.value.trim();

        customerNameInput.value = '';
        selectedCustomerId = null;
        createQuickCustomerBtn.classList.add('d-none');

        if (!term) return; // nada que buscar

        try {
            const response = await authFetch(`/api/customer/search?document=${encodeURIComponent(term)}`);

            if (!response.ok) return;

            const json = await response.json();
            if (!json.isSuccess || !json.result?.length) return;

            const customer = json.result[0];
            customerNameInput.value = customer.fullName;
            selectedCustomerId = customer.id;

        } catch (err) {
            console.error(err);
        }
    });

        /* ===============================
           ELEMENTOS DOM
        =============================== */
        const input = document.getElementById('productSearch');
        const results = document.getElementById('productResults');
        const quantityInput = document.getElementById('quantityInput');
        const addProductBtn = document.getElementById('addProductBtn');
        const clearBtn = document.getElementById('clearBtn');
        const saveSaleBtn = document.getElementById('saveSaleBtn');
        const saleTableBody = document.getElementById('saleTableBody');
        const totalAmount = document.getElementById('totalAmount');
        const unitPriceLabel = document.getElementById('unitPrice');
        const dateLabel = document.getElementById('currentDate');

        /* ===============================
           ELEMENTOS PARA PRODUCTOS TEMPORALES
        =============================== */
        const addTempBtn = document.getElementById('addTempBtn');
        const tempProductModal = document.getElementById('tempProductModal');
        const tempProductName = document.getElementById('tempProductName');
        const tempUnitPrice = document.getElementById('tempUnitPrice');
        const tempQuantity = document.getElementById('tempQuantity');
        const addTempProductBtn = document.getElementById('addTempProductBtn');

        let controller = null;
        let selectedProduct = null;
        let total = 0;
        const saleDetails = [];

        /* ===============================
           FECHA ACTUAL
        =============================== */
        if (dateLabel) {
            dateLabel.textContent = new Date().toLocaleDateString();
        }

        /* ===============================
           BUSCAR PRODUCTO
        =============================== */
        input.addEventListener('input', async () => {
            const term = input.value.trim();

            if (term.length < 2) {
                clearResults();
                return;
            }

            if (controller) controller.abort();
            controller = new AbortController();

            try {
                const response = await authFetch(
                    `${API_PRODUCT}/search?term=${encodeURIComponent(term)}`,
                    { signal: controller.signal }
                );

                if (!response.ok) return clearResults();

                const json = await response.json();
                if (!json.isSuccess || !json.result?.length) return clearResults();

                renderResults(json.result);

            } catch (err) {
                if (err.name !== 'AbortError') console.error(err);
            }
        });

        /* ===============================
           RENDER RESULTADOS
        =============================== */
        function renderResults(products) {
            results.innerHTML = '';

            products.forEach(p => {
                const item = document.createElement('button');
                item.type = 'button';
                item.className = 'list-group-item list-group-item-action';

                item.innerHTML = `
                    <div class="d-flex justify-content-between">
                        <div>
                            <strong>${p.productName}</strong><br/>
                            <small>${p.barcode}</small>
                        </div>
                        <div class="text-end">
                            <div>${formatCOP(p.unitPrice)}</div>

                            <small>Stock: ${p.currentStock}</small>
                        </div>
                    </div>
                `;

                item.onclick = () => selectProduct(p);
                results.appendChild(item);
            });

            results.style.display = 'block';
        }

        /* ===============================
           SELECCIONAR PRODUCTO
        =============================== */
        function selectProduct(product) {
            selectedProduct = product;
            input.value = product.productName;
            unitPriceLabel.textContent = formatCOP(product.unitPrice);
            results.style.display = 'none';
            addProductBtn.disabled = false;
        }

        /* ===============================
           Eliminar PRODUCTO
        =============================== */
        function removeProduct(index, row) {
            const removed = saleDetails[index];
            if (!removed) return;

            total -= removed.subtotal;
            saleDetails.splice(index, 1);
            row.remove();

            updateTotal();
            reindexRows();
        }

        function reindexRows() {
            [...saleTableBody.children].forEach((row, newIndex) => {
                row.setAttribute('data-index', newIndex);
                row.querySelector('button').onclick = () => {
                    removeProduct(newIndex, row);
                };
            });
        }

        /* ===============================
           AÑADIR PRODUCTO REAL
        =============================== */
        addProductBtn.addEventListener('click', () => {
            if (!selectedProduct) return;

            const quantity = parseInt(quantityInput.value);
            if (quantity <= 0) {
                alert('Cantidad inválida');
                return;
            }

            const subtotal = quantity * selectedProduct.unitPrice;

            const detail = {
                productId: selectedProduct.id,
                productName: selectedProduct.productName,
                quantity,
                unitPrice: selectedProduct.unitPrice,
                subtotal,
                isTemporary: false
            };

            saleDetails.push(detail);
            total += subtotal;

            const rowIndex = saleDetails.length - 1;
            const row = document.createElement('tr');
            row.setAttribute('data-index', rowIndex);

            row.innerHTML = `
                <td>${selectedProduct.barcode}</td>
                <td>${selectedProduct.productName}</td>
                <td class="text-center">
                    <input type="number"
                           class="form-control form-control-sm text-center quantity-input"
                           min="1"
                           value="${quantity}" />
                </td>
    <td class="text-end">${formatCOP(selectedProduct.unitPrice)}</td>
    <td class="text-end subtotal-cell">${formatCOP(subtotal)}</td>
                <td class="text-center">
                    <button class="btn btn-sm btn-danger">
                        ✕
                    </button>
                </td>
            `;

            const quantityInputRow = row.querySelector('.quantity-input');
            quantityInputRow.addEventListener('blur', () => {
                let newQty = parseInt(quantityInputRow.value);
                if (isNaN(newQty) || newQty <= 0) {
                    newQty = 1;
                    quantityInputRow.value = 1;
                }

                const index = parseInt(row.getAttribute('data-index'));
                const detail = saleDetails[index];

                total -= detail.subtotal;
                detail.quantity = newQty;
                detail.subtotal = newQty * detail.unitPrice;

               row.querySelector('.subtotal-cell').textContent = formatCOP(detail.subtotal);

                total += detail.subtotal;
                updateTotal();
            });

            row.querySelector('button').onclick = () => {
                const index = parseInt(row.getAttribute('data-index'));
                removeProduct(index, row);
            };

            saleTableBody.appendChild(row);
            updateTotal();
            resetSelection();
        });

        /* ===============================
           AÑADIR PRODUCTO TEMPORAL
        =============================== */
        addTempProductBtn.addEventListener('click', () => {
            const name = tempProductName.value.trim();
            const price = parseFloat(tempUnitPrice.value);
            const quantity = parseInt(tempQuantity.value);

            if (!name) {
                alert('El nombre del producto temporal es requerido');
                return;
            }

            if (isNaN(price) || price <= 0) {
                alert('Precio unitario inválido');
                return;
            }

            if (isNaN(quantity) || quantity <= 0) {
                alert('Cantidad inválida');
                return;
            }

            const subtotal = price * quantity;

            const detail = {
                productId: null,
                productName: name,
                quantity,
                unitPrice: price,
                subtotal,
                isTemporary: true
            };

            saleDetails.push(detail);
            total += subtotal;

            const rowIndex = saleDetails.length - 1;
            const row = document.createElement('tr');
            row.setAttribute('data-index', rowIndex);

            row.innerHTML = `
                <td><em>TEMPORAL</em></td>
                <td>${name}</td>
                <td class="text-center">
                    <input type="number"
                           class="form-control form-control-sm text-center quantity-input"
                           min="1"
                           value="${quantity}" />
                </td>
      <td class="text-end">${formatCOP(price)}</td>
    <td class="text-end subtotal-cell">${formatCOP(subtotal)}</td>

                <td class="text-center">
                    <button class="btn btn-sm btn-danger">
                        ✕
                    </button>
                </td>
            `;

            const quantityInputRow = row.querySelector('.quantity-input');
            quantityInputRow.addEventListener('blur', () => {
                let newQty = parseInt(quantityInputRow.value);
                if (isNaN(newQty) || newQty <= 0) {
                    newQty = 1;
                    quantityInputRow.value = 1;
                }

                const index = parseInt(row.getAttribute('data-index'));
                const detail = saleDetails[index];

                total -= detail.subtotal;
                detail.quantity = newQty;
                detail.subtotal = newQty * detail.unitPrice;

                row.querySelector('.subtotal-cell').textContent = formatCOP(detail.subtotal);

                total += detail.subtotal;
                updateTotal();
            });

            row.querySelector('button').onclick = () => {
                const index = parseInt(row.getAttribute('data-index'));
                removeProduct(index, row);
            };

            saleTableBody.appendChild(row);
            updateTotal();

            // Cerrar modal y limpiar campos
            const modal = bootstrap.Modal.getInstance(tempProductModal);
            modal.hide();
            tempProductName.value = '';
            tempUnitPrice.value = '';
            tempQuantity.value = '1';
        });

        /* ===============================
           TOTAL
        =============================== */
        function updateTotal() {
           totalAmount.textContent = formatCOP(total);

        }

        /* ===============================
           LIMPIAR
        =============================== */
        clearBtn.addEventListener('click', () => {
            resetSelection();
        });

        /* ===============================
           REGISTRAR VENTA
        =============================== */
        saveSaleBtn.addEventListener('click', async () => {
            if (saleDetails.length === 0) {
                alert('Agrega al menos un producto');
                return;
            }

            // Preparar DTO según el backend espera
            const dto = {
                customerId: selectedCustomerId || null, 
                details: saleDetails.map(detail => ({
                    productId: detail.isTemporary ? null : detail.productId,
                    productName: detail.productName,
                    quantity: detail.quantity,
                    unitPrice: detail.unitPrice,
                    subtotal: detail.subtotal,
                    isTemporary: detail.isTemporary || false
                }))
            };

            try {
                const response = await authFetch(API_SALE, {
                    method: 'POST',
                    body: JSON.stringify(dto)
                });

                if (!response.ok) {
                    const error = await response.json();
                    alert(error.message || 'Error al registrar la venta');
                    return;
                }

                alert('Venta registrada correctamente');
                window.location.reload();

            } catch (err) {
                console.error(err);
                alert('Error de conexión');
            }
        });

        /* ===============================
           UTILIDADES
        =============================== */
    function formatCOP(value) {
        return `$ ${Number(value).toLocaleString('es-CO', {
            minimumFractionDigits: 0,
            maximumFractionDigits: 0
        })}`;
    }

        function clearResults() {
            results.innerHTML = '';
            results.style.display = 'none';
        }

        function resetSelection() {
            selectedProduct = null;
            input.value = '';
            quantityInput.value = 1;
       unitPriceLabel.textContent = formatCOP(0);

            addProductBtn.disabled = true;
            clearResults();
        }

    })();
</script>